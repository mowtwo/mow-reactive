{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "declarationMap": false,
    "declarationDir": ".",
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "lib",
    "example",
  ],
}